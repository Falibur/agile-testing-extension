{
  "name": "Github Issue Submitter",
	"icons": { "16": "assets/icon.png",
	           "48": "assets/icon48.png",
	          "128": "assets/icon128.png" },
  "version": "1.1",
  "description": "Submit issues to Github. Include HTML source and screenshots from the current tab.",
  "options_page": "options.html",
  "background_page": "background.html",
  "browser_action": {
    "default_icon": "assets/icon.png",
    "popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/robots.txt*"],
      "js": ["oauth2/oauth2_inject.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["http://*/*", "https://*/*", "ftp://*/*", "file://*/*"],
      "js": ["gh-page.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs", "notifications", "http://*/*",  "https://*/*", "https://github.com/", "https://api.github.com/"
  ]
}